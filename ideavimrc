set clipboard+=unnamedplus
set number relativenumber

nnoremap H <nop>
nnoremap L <nop>
nnoremap <C-h> ^
nnoremap <C-l> $
nnoremap <C-j> L
nnoremap <C-k> H


inoremap <C-l> <nop>
inoremap <C-h> <Left>
inoremap <C-l> <Right>
inoremap <C-j> <Down>
inoremap <C-k> <Up>

nnoremap <up> <nop>
nnoremap <down> <nop>
nnoremap <left> <nop>
nnoremap <right> <nop>
